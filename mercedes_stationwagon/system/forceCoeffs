forceCoeffs1
{
    type            forceCoeffs;

    libs            (forces);

    writeControl    timeStep;
    timeInterval    1;

    log             yes;

    patches         (mercedes_stationwagonGroup);
    rho             rhoInf;      // Indicates incompressible
    rhoInf          0.000000001;           // Required when rho = rhoInf
    liftDir         (0 1 0);
    dragDir         (1 0 0);
    CofR            (0 0 0);  // Axle midpoint on ground
    pitchAxis       (0 0 1);
    magUInf         20000;
    lRef            200;        // Wheelbase length
    Aref            4800;        // Estimated
}

